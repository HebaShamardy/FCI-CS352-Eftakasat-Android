<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.FCI.SWE.SocialNetwork"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
	<uses-permission 
	    android:name="android.permission.INTERNET"
	    />
    
    <application
        android:name="com.FCI.SWE.Controllers.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.FCI.SWE.SocialNetwork.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
            android:name="com.FCI.SWE.SocialNetwork.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.FCI.SWE.SocialNetwork.LoginActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
		<activity
            android:name="com.FCI.SWE.SocialNetwork.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.FCI.SWE.SocialNetwork.HomeActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
		<activity
            android:name="com.FCI.SWE.SocialNetwork.RegistrationActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.FCI.SWE.SocialNetwork.RegistrationActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
				
    </application>

</manifest>
